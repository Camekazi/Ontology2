{
  "name": "dotwork-narrative-ontology",
  "version": "0.1.0",
  "description": "Transform informal narratives into structured, color-coded ontologies and shareable concept maps",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "cli": "node dist/tools/cli.js",
    "example": "npm run build && node dist/tools/cli.js examples/narratives/example-01.txt"
  },
  "keywords": [
    "ontology",
    "nlp",
    "narrative",
    "knowledge-graph",
    "entity-extraction",
    "concept-mapping"
  ],
  "author": "Dotwork",
  "license": "MIT",
  "dependencies": {
    "compromise": "^14.11.0",
    "natural": "^6.12.0",
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "jsonld": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}